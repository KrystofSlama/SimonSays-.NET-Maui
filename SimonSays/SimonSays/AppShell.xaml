<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimonSays.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SimonSays.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SimonSays">

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Score"
        ContentTemplate="{DataTemplate views:ScorePage}"
        Route="Score" />
    
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate views:Play}"
        Route="Play" />
    
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate views:OptionsPage}"
        Route="Options" />

</Shell>
