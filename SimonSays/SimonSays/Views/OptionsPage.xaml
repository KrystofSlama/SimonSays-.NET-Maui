<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonSays.Views.OptionsPage">
    <ContentPage.Content>
        <VerticalStackLayout
            BackgroundColor="Beige">
            <Label
                Text="Options"
                FontFamily="Jersey"
                FontSize="100"
                TextColor="Black"
                HorizontalOptions="Center"
                Margin="0, 0, 0, 40"
                />
            
            <Button
                Text="Reset Score"
                Clicked="OnBtnResetClicked"
                FontSize="30"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>